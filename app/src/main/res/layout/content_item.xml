<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ItemActivity"
    tools:showIn="@layout/activity_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIdLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/rId" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_left_padding"
            android:textSize="@dimen/rMainFieldSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/rDate" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_left_padding"
            android:textSize="@dimen/rMainFieldSize"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCarLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/rCar" />

                <TextView
                    android:id="@+id/tvcar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/tv_left_padding"
                    android:textSize="@dimen/rMainFieldSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDriverLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/rDriver" />

                <TextView
                    android:id="@+id/tvDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/tv_left_padding"
                    android:textSize="@dimen/rMainFieldSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonBarCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@null"
                app:srcCompat="@drawable/ic_bar_code" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvFieldLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/rField" />

        <AutoCompleteTextView
            android:id="@+id/tvField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_left_padding"
            android:textSize="@dimen/rMainFieldSize"
            android:textStyle="bold"
            android:completionThreshold="1"/>

        <TextView
            android:id="@+id/tvCropLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/rCrop" />

        <AutoCompleteTextView
            android:id="@+id/tvCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_left_padding"
            android:textSize="@dimen/rMainFieldSize"
            android:textStyle="bold"
            android:completionThreshold="1"/>

        <TextView
            android:id="@+id/tvWarehouseLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/rWarehouse" />

        <AutoCompleteTextView
            android:id="@+id/tvWarehouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_left_padding"
            android:textSize="@dimen/rMainFieldSize"
            android:textStyle="bold"
            android:completionThreshold="0"/>

        <TextView
            android:id="@+id/tvCreatedLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/rCreated" />

        <TextView
            android:id="@+id/tvCreatedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/tv_left_padding"
            android:textSize="@dimen/rMainFieldSize"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>